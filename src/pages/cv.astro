---
import { SITE } from "@config";
import Main from "@layouts/Main.astro";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
---

<Layout title={`CV | ${SITE.title}`}>
  <Header activeNav="cv" />
  <Main pageTitle="My Curriculum Vitae">
    <div class="w-full mx-auto flex max-w-5xl mt-8">
      <object data="/assets/CV.pdf" type="application/pdf" width="100%" height="700px">
        <p>Unable to display PDF file. <a href="/assets/CV.pdf">Download</a> instead.</p>
      </object>
    </div>
  </Main>
  <Footer />
</Layout>
